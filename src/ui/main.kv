# colours : 
# bg rgba: 0.051, 0.067, 0.090, 1
# panels rgba: 0.086, 0.106, 0.133, 1   
# outline rgba: 0.129, 0.149, 0.176, 1   (size+2)
# text1 rgba: 0.788, 0.820, 0.851, 1   
# text2 rgba: 0.545, 0.580, 0.620, 1   
# buttons rgba: 0.176, 0.643, 0.306, 1
# hover rgba: 0.129, 0.149, 0.176, 1

<MainWindow>:  
    name: "main" 

    # --------Main--------
    FloatLayout:
        canvas.before:
            Color:
                rgba: 0.051, 0.067, 0.090, 1
            Rectangle:
                pos: self.pos
                size: self.size
    
        # --------top bar--------
        FloatLayout:
            size_hint: 1,0.1
            pos_hint: {"x":0, "y":0.9}
            canvas.before:
                Color:
                    rgba: 0.129, 0.149, 0.176, 1  
                Rectangle:
                    pos: self.pos
                    size: self.size
                # the outline becuz it looks better, some rando guy told me hehe
                Color:
                    rgba: 0, 0, 0, 1 
                Rectangle:
                    pos: self.x, self.y+2
                    size: self.size
            Label:
                text: "Habit Tracker 101"
                color: "white"
                pos_hint: {"center_x":0.5, "center_y":0.5}

        # --------bottom bar--------
        FloatLayout:
            size_hint: 1, 0.05
            pos_hint: {"x": 0, "y": 0}

            canvas.before:
                Color:
                    rgba: 0.129, 0.149, 0.176, 1  
                Rectangle:
                    pos: self.pos
                    size: self.size
                    
                Color:
                    rgba: 0.086, 0.106, 0.133, 1
                Rectangle:
                    pos: self.pos
                    size: self.width, self.height - 2
            Button:
                size_hint: 0.15, 1
                text: "+"
                pos_hint: {"x": 0, "y": 0}
                background_color: 0.086, 0.106, 0.133, 1
                canvas.before:
                    Color:
                        rgba: 0.129, 0.149, 0.176, 1  
                    Line:
                        width: 1
                        rectangle: (self.x, self.y, self.width, self.height)
                on_release: 
                    app.popup()
                
            Button:
                size_hint: 0.15, 1
                text: "|||"
                pos_hint: {"x": 0.85, "y": 0}
                background_color: 0.086, 0.106, 0.133, 1
                canvas.before:
                    Color:
                        rgba: 0.129, 0.149, 0.176, 1  
                    Line:
                        width: 1
                        rectangle: (self.x, self.y, self.width, self.height)
                on_release: 
                    app.root.current = "info"#-----------------------------------------second
                    root.manager.transition.direction = "left"
        # ---------------scrollable of habits----------------
        FloatLayout:
            size_hint: 0.9, 0.75
            pos_hint: {"x": 0.05, "y": 0.1}
            canvas.before:
                # outline
                Color:
                    rgba: 0.129, 0.149, 0.176, 1
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                Color:
                    rgba: 0.086, 0.106, 0.133, 1
                RoundedRectangle:
                    pos: self.x + 2, self.y + 2
                    size: self.width - 4, self.height - 4

            ScrollView:
                size_hint: 1, 0.98
                pos_hint: { "y": 0.01}
                do_scroll_x: False
                do_scroll_y: True
                
                StackLayout:
                    id: labelled_habits
                    size_hint_y: None
                    padding: 30, 10
                    