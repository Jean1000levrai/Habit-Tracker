<MainWindow>:  
    name: "main" 

    # --------Main--------
    FloatLayout:
        canvas.before:
            Color:
                rgba: 0.7, 0.7, 0.7, 1  # light gray
            Rectangle:
                pos: self.pos
                size: self.size
    
        # --------top bar--------
        FloatLayout:
            size_hint: 1,0.1
            pos_hint: {"x":0, "y":0.9}
            canvas.before:
                Color:
                    rgba: 0.4, 0.4, 0.4, 1  # darker gray
                Rectangle:
                    pos: self.pos
                    size: self.size
            Label:
                text: "Habit Tracker 101"
                color: "black"
                pos_hint: {"center_x":0.5, "center_y":0.5}

        # --------bottom bar--------
        FloatLayout:
            size_hint: 1, 0.05
            pos_hint: {"x": 0, "y": 0}

            canvas.before:
                Color:
                    rgba: 0.4, 0.4, 0.4, 1  # darker gray
                Rectangle:
                    pos: self.pos
                    size: self.size

            Button:
                size_hint: 0.15, 1
                text: "+"
                pos_hint: {"x": 0, "y": 0}
                
            Button:
                size_hint: 0.15, 1
                text: "|||"
                pos_hint: {"x": 0.85, "y": 0}
                on_release: 
                    app.root.current = "second"
                    root.manager.transition.direction = "left"

        
