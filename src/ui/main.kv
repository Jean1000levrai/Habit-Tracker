<MainWindow>:  
    name: "main" 

    # --------Main--------
    FloatLayout:
        canvas.before:
            Color:
                rgba: 0.7, 0.7, 0.7, 1  # light gray
            Rectangle:
                pos: self.pos
                size: self.size
    
        # --------top bar--------
        FloatLayout:
            size_hint: 1,0.1
            pos_hint: {"x":0, "y":0.9}
            canvas.before:
                Color:
                    rgba: 0.4, 0.4, 0.4, 1  # darker gray
                Rectangle:
                    pos: self.pos
                    size: self.size
            Label:
                text: "Habit Tracker 101"
                color: "black"
                pos_hint: {"center_x":0.5, "center_y":0.5}

        # --------bottom bar--------
        FloatLayout:
            size_hint: 1, 0.05
            pos_hint: {"x": 0, "y": 0}

            canvas.before:
                Color:
                    rgba: 0.4, 0.4, 0.4, 1  # darker gray
                Rectangle:
                    pos: self.pos
                    size: self.size
            Button:
                size_hint: 0.15, 1
                text: "+"
                pos_hint: {"x": 0, "y": 0}
                on_release: 
                    app.popup()

                
            Button:
                size_hint: 0.15, 1
                text: "|||"
                pos_hint: {"x": 0.85, "y": 0}
                on_release: 
                    app.root.current = "second"
                    root.manager.transition.direction = "left"
        # ---------------scrollable of habits----------------
        FloatLayout:
            size_hint: 1, 0.9
            pos_hint: { "y": 0.05}
            canvas.before:
 
            ScrollView:
                size_hint: 1, 0.93
                pos_hint: { "y": 0.01}
                do_scroll_x: False
                do_scroll_y: True
                
                Label:
                    id: labelled_habits
                    size_hint_y: None
                    height: self.texture_size[1]
                    text_size: self.width, None
                    padding: 10, 10
                    text:
                        'really some amazing text\n' * 100