
<SettingsWindow>:  
    name: "second"
    # --------Main--------
    FloatLayout:
        canvas.before:
            Color:
                rgba: app.bg_color
            Rectangle:
                pos: self.pos
                size: self.size
    
        # --------top button--------
        FloatLayout:
            size_hint: 1,0.05
            pos_hint: {"x":0, "y":0.95}

            Button:
                text: "<- Settings"

                color: app.text_color
                background_color: app.back_btn_color
                background_normal: ''

                pos_hint: {"center_x":0.5, "center_y":0.5}
                border: (10,10,10,10)
                canvas.before:
                    Color:
                        rgba: app.button_color  
                    Line:
                        width: 2
                        rectangle: (self.x, self.y, self.width, self.height)
                on_release: 
                    app.root.current = "main"
                    root.manager.transition.direction = "right"

        # ----------panel---------------
        FloatLayout:
            size_hint: 0.9, 0.8
            pos_hint: {"x": 0.05, "y": 0.1}
            
            # visual for the panel
            canvas.before:
                # outline
                Color:
                    rgba: app.outline_color
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                # panel
                Color:
                    rgba: app.panel_color
                RoundedRectangle:
                    pos: self.x + 2, self.y + 2
                    size: self.width - 4, self.height - 4
            # ------scrollable------
            ScrollView:
                size_hint: 1, 0.98
                pos_hint: { "y": 0.01}
                do_scroll_x: False
                do_scroll_y: True
                
                StackLayout:
                    id: labelled_settings
                    size_hint_y: None
                    padding: 30, 10
                    spacing: 10
                    background_color: app.button_color
                    color: app.text_color
                    font_size: 16
                    
                    # themes button
                    Button:
                        id: settings_theme
                        size_hint: None, None
                        size: 200, 44
                        color: app.text_color
                        background_color: app.button_color
                        background_normal: ''
                        text: "Theme: Dark"
                        on_release:
                            app.theme()
                        canvas.before:
                            Color:
                                rgba: app.button_color  
                            Line:
                                width: 1
                                rectangle: (self.x, self.y, self.width, self.height)

                    # promo buttons
                    Button:
                        color: app.text_color
                        background_color: app.button_color
                        background_normal: ''
                        size_hint: None, None
                        size: 200, 44
                        text: "sign out"
                        canvas.before:
                            Color:
                                rgba: app.button_color  
                            Line:
                                width: 1
                                rectangle: (self.x, self.y, self.width, self.height)
                        on_release:
                            app.root.current = "login"
                            root.signout()

                    # sorting habit
                    Spinner:
                        id: sort_hab
                        text: 'Sort by: '
                        values: ['Sort by: Last created', 'Sort by: Alphabetical', 'Sort by: Time']
                        size_hint: None, None
                        size: 200, 44

                        color: app.text_color
                        background_color: app.button_color
                        background_normal: ''
                        canvas.before:
                            Color:
                                rgba: app.button_color  
                            Line:
                                width: 1
                                rectangle: (self.x, self.y, self.width, self.height)
                        on_text: root.sort_hab()

                    # dev btn
                    Button:
                        color: app.text_color
                        background_color: app.button_color
                        background_normal: ''
                        text: "developper mode"
                        size_hint: None, None
                        size: 200, 44
                        canvas.before:
                            Color:
                                rgba: app.button_color
                            Line:
                                width: 1
                                rectangle: (self.x, self.y, self.width, self.height)
                        on_release:
                            app.root.current = "devmode"
                            root.manager.transition.direction = "left"

                    # about button
                    Button:
                        color: app.text_color
                        background_color: app.button_color
                        background_normal: ''
                        text: "About"
                        size_hint: None, None
                        size: 200, 44
                        canvas.before:
                            Color:
                                rgba: app.button_color
                            Line:
                                width: 1
                                rectangle: (self.x, self.y, self.width, self.height)
                        on_release:
                            app.root.current = "about"
                            root.manager.transition.direction = "left"

                    # git link
                    Button:
                        id: github
                        color: app.text_color
                        background_color: app.button_color
                        background_normal: ''
                        text: "Github"
                        size_hint: None, None
                        size: 200, 44
                        canvas.before:
                            Color:
                                rgba: app.button_color  
                            Line:
                                width: 1
                                rectangle: (self.x, self.y, self.width, self.height)
                        on_release:
                            root.link_github()
                        
                        
 