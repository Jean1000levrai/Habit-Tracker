<aboutWindow>
    name: "about"
    # --------Main--------
    FloatLayout:
        canvas.before:
            Color:
                rgba: app.bg_color
            Rectangle:
                pos: self.pos
                size: self.size
    
        # --------top button--------
        FloatLayout:
            size_hint: 1,0.05
            pos_hint: {"x":0, "y":0.95}

            Button:
                text: "<- about"
                pos_hint: {"center_x":0.5, "center_y":0.5}
                color: app.text_color
                background_color: app.back_btn_color 
                background_normal: ''
                border: (10,10,10,10)
                canvas.before:
                    Color:
                        rgba: app.outline_color   
                    Line:
                        width: 2
                        rectangle: (self.x, self.y, self.width, self.height)
                on_release: 
                    app.root.current = "second"
                    root.manager.transition.direction = "right"
        # ----------panel---------------
        FloatLayout:
            size_hint: 0.9, 0.8
            pos_hint: {"x": 0.05, "y": 0.1}
            
            canvas.before:
                # outline
                Color:
                    rgba: app.outline_color
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                # panel
                Color:
                    rgba: app.panel_color
                RoundedRectangle:
                    pos: self.x + 2, self.y + 2
                    size: self.width - 4, self.height - 4
            # ------scrollable------
            ScrollView:
                size_hint: 1, 0.98
                pos_hint: { "y": 0.01}
                do_scroll_x: False
                do_scroll_y: True
                
            
                Label:
                    padding: 30, 0
                    text: "dev: Jean Salomon\ndesign: Jean Salomon\nideas: Jean Salomon\n\nlanguage translation:\n    english: Jean Salomon\n    maybe french in the future"

                    color: app.text_color

                    halign: 'left'
                    valign: 'top'
                    text_size: self.size
