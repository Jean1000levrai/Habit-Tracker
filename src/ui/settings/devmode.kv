<DevModeScreen>:
    name: "devmode"
    # --------Main--------
    FloatLayout:
        canvas.before:
            Color:
                rgba: app.bg_color
            Rectangle:
                pos: self.pos
                size: self.size
    
        # --------top button--------
        FloatLayout:
            size_hint: 1,0.05
            pos_hint: {"x":0, "y":0.95}

            Button:
                text: "<- Back"

                color: app.text_color
                background_color: app.back_btn_color
                background_normal: ''

                pos_hint: {"center_x":0.5, "center_y":0.5}
                border: (10,10,10,10)
                canvas.before:
                    Color:
                        rgba: app.button_color  
                    Line:
                        width: 2
                        rectangle: (self.x, self.y, self.width, self.height)
                on_release: 
                    app.root.current = "main"
                    root.manager.transition.direction = "right"


        # ----------SQL input----------
        FloatLayout:
            size_hint: 1,0.5
            pos_hint: {"x":0, "y":0.5}

            Label:
                text: "Inject SQL to the Database Here"
                color: app.text_color
                font_size: '18sp'
                pos_hint: {"x":0, "y":0.2}


            # input
            TextInput:
                id: sql_input
                pos_hint: {"x": 0.05, "y": 0.3}
                size_hint: 0.9, 0.3
                multiline: True
                foreground_color: app.text_color
                background_color:app.outline_color

        # ----------panel---------------
        FloatLayout:
            size_hint: 0.9, 0.4
            pos_hint: {"x": 0.05, "y": 0.1}
            
            # visual for the panel
            canvas.before:
                # outline
                Color:
                    rgba: app.outline_color
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                # panel
                Color:
                    rgba: app.panel_color
                RoundedRectangle:
                    pos: self.x + 2, self.y + 2
                    size: self.width - 4, self.height - 4
            
            


        # ------------Save btn--------------
        AnchorLayout:
            anchor_x: "center"
            anchor_y: "bottom"

            # save
            Button:
                text: "Save"
                size_hint: None, None
                size: 150, 50

                color: app.text_color
                background_color: app.sbutton_color
                background_normal: ''

                canvas.before:
                    Color:
                        rgba: app.outline_color   
                    Line:
                        width: 1
                        rectangle: (self.x, self.y, self.width, self.height)
                on_release:
                    root.save()