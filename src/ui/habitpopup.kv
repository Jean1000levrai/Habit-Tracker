<AddHabitPopup>:
    name: "habPopup"
    title: "Add New Habit"
    size_hint: 0.8, 0.5
    auto_dismiss: False
    BoxLayout:
        orientation: 'vertical'
        rows: 2
        canvas.before:
            Color:
                rgba: app.bg_color
            Rectangle:
                pos: self.pos
                size: self.size
        Button:
            text: "Yes No Habit"
            background_color: app.panel_color 
            on_release: 
                app.root.current = "habYesNo"
                app.root.get_screen("main").manager.transition.direction = "left"
                # -------------------FUTURE ME : MAKE A TRANSITION TO THE LEFT THK U!
                root.dismiss()
        Button:
            background_color: app.panel_color 
            text: "Counting Habit"
            on_release: root.dismiss()

        
        
