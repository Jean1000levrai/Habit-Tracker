<HabitInfoWindow>
    name: "info"
    # --------Main--------
    FloatLayout:
        canvas.before:
            Color:
                rgba: 0.051, 0.067, 0.090, 1
            Rectangle:
                pos: self.pos
                size: self.size
    
        # --------top button--------
        FloatLayout:
            size_hint: 1,0.05
            pos_hint: {"x":0, "y":0.95}

            Button:
                text: "<- name of the habit"    # FUTURE ME, PUT THE NAME OF THE HABIT
                pos_hint: {"center_x":0.5, "center_y":0.5}
                background_color: 0.086, 0.106, 0.133, 1 
                border: (10,10,10,10)
                canvas.before:
                    Color:
                        rgba: 0.129, 0.149, 0.176, 1  
                    Line:
                        width: 1
                        rectangle: (self.x, self.y, self.width, self.height)
                on_release: 
                    app.root.current = "main"
                    root.manager.transition.direction = "right"