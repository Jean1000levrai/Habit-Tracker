<AddHabitPopup>:

    size_hint: 0.8, 0.5
    auto_dismiss: False
    BoxLayout:
        orientation: 'vertical'
        rows: 2
        canvas.before:
            Color:
                rgba: app.bg_color
            Rectangle:
                pos: self.pos
                size: self.size
            
        # yes no
        Button:
            text: "Yes No Habit\n e.g. brush your teeth"
            background_color: app.panel_color 
            background_normal: ''
            on_release: 
                app.root.current = "habYesNo"
                app.root.get_screen("main").manager.transition.direction = "left"
                root.dismiss()

        # measurable
        Button:
            text: "Habit Measurable\n e.g. read at least 10 pages"
            background_color: app.panel_color 
            background_normal: ''
            on_release: 
                app.root.current = "habMeasurable"
                app.root.get_screen("main").manager.transition.direction = "left"
                root.dismiss()

        # cancel
        Button:
            background_color: (1,0.2,0.2,1)
            background_normal: ''
            size_hint_y: 0.3
            text: "Cancel"
            on_release: root.dismiss()

        
        
