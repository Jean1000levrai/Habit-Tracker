<AddHabitWindow>:
    name: "habYesNo"

    # ----------Main-----------
    FloatLayout:
        canvas.before:
            Color:
                rgba: 0.051, 0.067, 0.090, 1
            Rectangle:
                pos: self.pos
                size: self.size
        BoxLayout:
            orientation: 'vertical'
            size_hint: 0.9, 0.2   # 90% width, 50% height
            pos_hint: {"center_x": 0.5, "top": 0.95}  # anchored near the top

            spacing: dp(10)  # space between text inputs
            padding: dp(10)

            TextInput: # FUTURE ME : CREATE A COLOR PICKER INSTEAD OF LETTING PEOPLE GIVE HEX
                id: col
                hint_text: "Color"
                multiline: False
                background_color:(0.129, 0.149, 0.176)

            TextInput:
                id: name
                hint_text: "Name"
                multiline: False
                background_color:(0.129, 0.149, 0.176)

            TextInput:
                id: qu
                hint_text: "Question"
                multiline: False
                background_color:(0.129, 0.149, 0.176)

            TextInput:
                id: descr
                hint_text: "Description"
                multiline: False
                background_color:(0.129, 0.149, 0.176)

        # ------------Save btn--------------
        AnchorLayout:
            anchor_x: "center"
            anchor_y: "bottom"

            Button:
                text: "Save"
                size_hint: None, None
                size: 150, 50
                on_release:
                    root.save_btn()
        
        # ------------exit btn--------------
        AnchorLayout:
            anchor_x: "center"
            anchor_y: "top"

            Button:
                text: "<- Habit"
                size_hint: None, None
                size: 360, 40
                canvas.before:
                    Color:
                        rgba: 0.7, 0.7, 0.7, 1  # light gray
                    Rectangle:
                        pos: self.pos
                        size: self.size
                on_release: 
                    app.root.current = "main"
                    root.manager.transition.direction = "right"

