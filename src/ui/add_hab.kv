<AddHabitWindow>:
    name: "habYesNo"

    # ----------Main-----------
    FloatLayout:
        canvas.before:
            Color:
                rgba: app.bg_color
            Rectangle:
                pos: self.pos
                size: self.size
        BoxLayout:
            orientation: 'vertical'
            size_hint: 0.9, 0.2   # 90% width, 50% height
            pos_hint: {"center_x": 0.5, "top": 0.95}  # anchored near the top

            spacing: dp(10)  # space between text inputs
            padding: dp(10)


            TextInput:
                id: name
                hint_text: "Name"
                multiline: False
                background_color:app.outline_color 

            TextInput:
                id: qu
                hint_text: "Question"
                multiline: False
                background_color:app.outline_color 

            TextInput:
                id: descr
                hint_text: "Description"
                multiline: False
                background_color:app.outline_color 

            ColorWheel:
                id: col
                on_color: root.color_selected(self.color)
                size: 100, 50

        # ------------Save btn--------------
        AnchorLayout:
            anchor_x: "center"
            anchor_y: "bottom"

            Button:
                text: "Save"
                size_hint: None, None
                size: 150, 50
                color: app.text_color
                background_color: app.button_color 
                canvas.before:
                    Color:
                        rgba: app.outline_color   
                    Line:
                        width: 1
                        rectangle: (self.x, self.y, self.width, self.height)
                on_release:
                    root.save_btn()
        
        # ------------exit btn--------------
        AnchorLayout:
            anchor_x: "center"
            anchor_y: "top"

            Button:
                text: "<- Habit"
                size_hint: None, None
                size: 360, 40
                color: app.text_color
                background_color: app.button_color  
                canvas.before:
                    Color:
                        rgba: app.outline_color   
                    Line:
                        width: 1
                        rectangle: (self.x, self.y, self.width, self.height)
                on_release: 
                    app.root.current = "main"
                    root.manager.transition.direction = "right"

