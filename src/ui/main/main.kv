<MainWindow>:  
    name: "main" 

    # --------Main--------
    FloatLayout:
        canvas.before:
            Color:
                rgba: app.bg_color
            Rectangle:
                pos: self.pos
                size: self.size
    
        # --------top bar--------
        FloatLayout:
            size_hint: 1,0.1
            pos_hint: {"x":0, "y":0.9}
            canvas.before:
                Color:
                    rgba: app.outline_color  
                Rectangle:
                    pos: self.pos
                    size: self.size
                # the outline becuz it looks better, some rando guy told me hehe
                Color:
                    rgba: app.big_panel
                Rectangle:
                    pos: self.x, self.y+2
                    size: self.size
            Label:
                id: title_app
                text: "Habit Tracker 101"
                color: app.text_color
                pos_hint: {"center_x":0.5, "center_y":0.5}

        # --------bottom bar--------
        FloatLayout:
            size_hint: 1, 0.05
            pos_hint: {"x": 0, "y": 0}

            canvas.before:
                Color:
                    rgba: app.outline_color  
                RoundedRectangle:
                    pos: self.x + 3, self.y + 5
                    size: self.width - 5, self.height * 1.5 - 5
                    
                Color:
                    rgba: app.big_panel
                RoundedRectangle:
                    pos: self.x + 5, self.y + 7
                    size: self.width - 9, self.height * 1.5 - 9
            Button:
                size_hint: 0.3, 1
                text: "+"
                font_name: "FontAwesome"
                font_size: '24sp'

                color: app.text_color
                background_color: 0, 0, 0, 0
                background_normal: ''

                pos_hint: {"x": 0.03, "y": 0.3}

                on_release: 
                    app.popup()

                canvas.before:
                    Color:
                        rgba: app.sbutton_color
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                
            Button:
                size_hint: 0.3, 1
                text: ""
                font_name: "FontAwesome"
                font_size: '24sp'

                color: app.text_color
                background_color: 0, 0, 0, 0
                background_normal: ''

                pos_hint: {"x": 0.67, "y": 0.3}

                canvas.before:
                    Color:
                        rgba: app.sbutton_color
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                
                on_release: 
                    app.root.current = "second"
                    root.manager.transition.direction = "left"
            Button:
                size_hint: 0.3, 1
                text: ""
                font_name: "FontAwesome"
                font_size: '24sp'

                color: app.text_color
                background_color: 0, 0, 0, 0
                background_normal: ''

                pos_hint: {"x": 0.35, "y": 0.3}

                canvas.before:
                    Color:
                        rgba: app.sbutton_color
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                on_release: 
                    app.root.current = "calendar"
                    root.manager.transition.direction = "left"
        # ---------------scrollable of habits----------------
        FloatLayout:
            size_hint: 0.9, 0.75
            pos_hint: {"x": 0.05, "y": 0.1}
            
            canvas.before:
                # outline
                Color:
                    rgba: app.outline_color
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                Color:
                    rgba: app.panel_color 
                RoundedRectangle:
                    pos: self.x + 2, self.y + 2
                    size: self.width - 4, self.height - 4

            ScrollView:
                size_hint: 1, 0.98
                pos_hint: { "y": 0.01}
                do_scroll_x: False
                do_scroll_y: True
                
                BoxLayout:
                    id: labelled_habits
                    orientation: 'vertical'
                    size_hint_y: None
                    size_hint_x: 1
                    width: self.parent.width
                    padding: 30, 10
                    height: self.minimum_height
<WelcomePopup>:
    title: "Welcome!"
    size_hint: 0.6, 0.4
    auto_dismiss: False

    BoxLayout:
        orientation: 'vertical'
        spacing: 10
        padding: 10

        Label:
            text: "Welcome to the app!"

        Button:
            text: "Close"
            size_hint_y: 0.3
            background_normal: ''
            on_release:   
                root.dismiss()
