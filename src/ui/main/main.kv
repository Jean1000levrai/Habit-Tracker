<MainWindow>:  
    name: "main" 

    # --------Main--------
    FloatLayout:
        canvas.before:
            Color:
                rgba: app.bg_color
            Rectangle:
                pos: self.pos
                size: self.size
    
        # --------top bar--------
        FloatLayout:
            size_hint: 1,0.1
            pos_hint: {"x":0, "y":0.9}
            canvas.before:
                Color:
                    rgba: app.outline_color  
                Rectangle:
                    pos: self.pos
                    size: self.size
                # the outline becuz it looks better, some rando guy told me hehe
                Color:
                    rgba: app.big_panel
                Rectangle:
                    pos: self.x, self.y+2
                    size: self.size
            Label:
                id: title_app
                text: "Habit Tracker 101"
                color: app.text_color
                pos_hint: {"center_x":0.5, "center_y":0.5}

        # --------bottom bar--------
        FloatLayout:
            size_hint: 1, 0.05
            pos_hint: {"x": 0, "y": 0}

            canvas.before:
                Color:
                    rgba: app.outline_color  
                Rectangle:
                    pos: self.pos
                    size: self.size
                    
                Color:
                    rgba: app.panel_color 
                Rectangle:
                    pos: self.pos
                    size: self.width, self.height - 2
            Button:
                size_hint: 0.15, 1
                text: "+"

                color: app.text_color
                background_color: app.button_color

                pos_hint: {"x": 0, "y": 0}

                canvas.before:
                    Color:
                        rgba: app.outline_color  
                    Line:
                        width: 1
                        rectangle: (self.x, self.y, self.width, self.height)
                on_release: 
                    app.popup()
                
            Button:
                size_hint: 0.15, 1
                text: "|||"

                color: app.text_color
                background_color: app.button_color

                pos_hint: {"x": 0.85, "y": 0}

                canvas.before:
                    Color:
                        rgba: app.outline_color  
                    Line:
                        width: 1
                        rectangle: (self.x, self.y, self.width, self.height)
                on_release: 
                    app.root.current = "second"
                    root.manager.transition.direction = "left"
        # ---------------scrollable of habits----------------
        FloatLayout:
            size_hint: 0.9, 0.75
            pos_hint: {"x": 0.05, "y": 0.1}
            
            canvas.before:
                # outline
                Color:
                    rgba: app.outline_color
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                Color:
                    rgba: app.panel_color 
                RoundedRectangle:
                    pos: self.x + 2, self.y + 2
                    size: self.width - 4, self.height - 4

            ScrollView:
                size_hint: 1, 0.98
                pos_hint: { "y": 0.01}
                do_scroll_x: False
                do_scroll_y: True
                
                StackLayout:
                    cols: 1
                    id: labelled_habits
                    size_hint_y: None
                    padding: 30, 10
<WelcomePopup>:
    title: "Welcome!"
    size_hint: 0.6, 0.4
    auto_dismiss: False

    BoxLayout:
        orientation: 'vertical'
        spacing: 10
        padding: 10

        Label:
            text: "Welcome to the app!"
        Label:
            text: "Who are you?"
        TextInput:
            id: set_name
            hint_text:"name"

        Button:
            text: "Close"
            size_hint_y: 0.3
            on_release: 
                root.set_name()    
                root.dismiss()
                