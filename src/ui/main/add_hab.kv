<AddHabitWindow>:
    name: "habYesNo"

    # ----------Main-----------
    FloatLayout:
        canvas.before:
            Color:
                rgba: app.bg_color
            Rectangle:
                pos: self.pos
                size: self.size
        BoxLayout:
            orientation: 'vertical'
            size_hint: 0.9, 0.2 
            pos_hint: {"center_x": 0.5, "top": 0.95}

            spacing: dp(10)
            padding: dp(10)

            # ColorWheel:
            #     id: col
            #     on_color: root.color_selected(self.color)
            #     size_hint_y: None
            #     size: 100, 100

            TextInput:
                id: name
                hint_text: "Name"
                multiline: False
                foreground_color: app.text_color
                background_color:app.outline_color 

            TextInput:
                id: qu
                hint_text: "Question"
                multiline: False
                foreground_color: app.text_color
                background_color:app.outline_color 

            TextInput:
                id: descr
                hint_text: "Description"
                multiline: False
                foreground_color: app.text_color
                background_color:app.outline_color

            Button:
                color: app.text_color
                background_color: app.button_color
                padding: 5, 0

                canvas.before:
                    Color:
                        rgba: app.outline_color  
                    Line:
                        width: 1
                        rectangle: (self.x, self.y, self.width, self.height)

                text: "Reminder"
                size_hint_y: None
                height: 30
                halign: "left"
                valign: "middle"
                text_size: self.size

                on_release:
                    app.root.current = "reminder"
                    root.manager.transition.direction = "left"

            

        # ------------Save btn--------------
        AnchorLayout:
            anchor_x: "center"
            anchor_y: "bottom"

            Button:
                text: "Save"
                size_hint: None, None
                size: 150, 50

                color: app.text_color
                background_color: app.sbutton_color 

                canvas.before:
                    Color:
                        rgba: app.outline_color   
                    Line:
                        width: 1
                        rectangle: (self.x, self.y, self.width, self.height)
                on_release:
                    root.save_btn()
        
        # ------------exit btn--------------
        AnchorLayout:
            anchor_x: "center"
            anchor_y: "top"

            Button:
                text: "<- Discard & Back"

                size_hint: None, None
                size: 360, 40

                halign: "left"
                valign: "middle"
                text_size: self.width, None
                padding: 10, 0

                color: app.text_color
                background_color: app.button_color  
                canvas.before:
                    Color:
                        rgba: app.outline_color   
                    Line:
                        width: 1
                        rectangle: (self.x, self.y, self.width, self.height)
                on_release: 
                    app.root.current = "main"
                    root.manager.transition.direction = "right"

